<%- include('header') %>
    <h2 style=" margin-bottom: 10px">Most liked shoes: </h2>
    <div class="row">
        <% for (let i = 0; i < mostLiked.length; i++) { %>
            <% let shoe = mostLiked[i]; %>
            <div class="col-3" >
                <a href="/shoes/<%= shoe._id%>" class="custom-image-div look_shoe">
                    <img src="<%= shoe.image %>" alt="{{shoe.name}}" style="width: 100%; height: 80%;">
                    <hr />
                    <p style="text-align: center;"><%= shoe.name %> - <%=Math.round(shoe.stars)%>
                        <i class="fa fa-star" style="color: orange" aria-hidden="true"></i>
                    </p>
                </a>
            </div>
        <% } %>
    </div>

    <h2 style=" margin-bottom: 10px; margin-top: 20px;">Most commented shoes: </h2>
    <div class="row">
        <% for (let i = 0; i < mostCommented.length; i++) { %>
        <% let shoe = mostCommented[i] %>
        <div class="col-3" >
            <a href="/shoes/<%= shoe.id %>" class="custom-image-div look_shoe">
                <img src="<%= shoe.image %>" alt="<%= shoe.name %>" style="width: 100%; height: 80%;">
                <hr />
                <p style="text-align: center;"><%= shoe.name %> - <%=shoe.numberComments%>
                    <i class="fa fa-comment" aria-hidden="true"></i>
                </p>
            </a>
        </div>
        <% } %>
    </div>

<%-include('footer')%>