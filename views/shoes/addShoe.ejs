<%- include('../header') -%>

    <h1>Add a new Shoe: </h1>
    <form method="POST" action="/shoes/add" enctype="multipart/form-data">
        <div class="form-group">
            <input name="shoeName" class="form-control" type="text" placeholder="Shoe Name" >
        </div>

        <div class="form-group">
            <input name="brand" class="form-control" type="text" placeholder="Shoe Brand" >
        </div>

        <div class="form-group"> 
            <select name="type" class="form-control" name="type" >
                <option value="sport">Sport</option>
                <option value="running">Running</option>
                <option value="comfort">Comfort</option>
                <option value="mountain">Mountain</option>
            </select>   
        </div>

        <div class="form-group">
            <input name="image" type="file" accept="image/*">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>

    <!-- <script src="/js/addShoe.js"></script> -->

<%-include('../footer')-%>
